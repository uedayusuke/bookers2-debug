<h2>User info</h2>

<%= form_for(@user) do |f| %>

<div class="field">
	<label for="user_name">Name</label>
	<%= f.text_field :name, autofocus: true, id: "user_name" %>
</div>

<div class="field">
	<label for="user_image">Image</label><br>
	<%= f.attachment_field :profile_image, id: "user_image" %>
</div>

<div class="field">
	<label for="user_introduction">Introduction</label>
	<%= f.text_area :introduction, autofocus: true, id: "user_introduction" %>
</div>

<div class="actions">
	<%= f.submit "Update User" %>
</div>

<% end %>